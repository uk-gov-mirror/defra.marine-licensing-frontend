{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

{% set rows = [] %}

{% set _ = rows.push({
     key: { text:  "Consent to publish your project information" },
     value: { html: "Yes" if params.publicRegister.consent === 'yes' else "No" }
   })
%}

{%  if params.publicRegister.consent === 'no' %}

{% set _ = rows.push({
  key: { text: "Why you do not consent" },
  value: { html: params.publicRegister.reason | default('') }
}) %}

{%  endif  %}

{{ govukSummaryList({
    card: {
      title: {
        text: "Sharing your project information publicly"
      },
      actions: {
        items: [
          {
            href: "#",
            text: "Change"
          }
        ]
      } if not params.isReadOnly,
      attributes: {
        id: "public-register-card"
      }
    },
    rows: rows
  }) }}
