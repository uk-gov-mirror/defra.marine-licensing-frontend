{% if showCookieBanner or showCookieConfirmationBanner %}
  <div class="govuk-cookie-banner" data-module="govuk-cookie-banner" role="region" aria-label="Cookie banner">
    {% if showCookieConfirmationBanner %}
      {# Confirmation banner after accepting or rejecting cookies #}
      <div class="govuk-cookie-banner__message govuk-width-container">
        <div class="govuk-grid-row">
          <div class="govuk-grid-column-two-thirds">
            <div class="govuk-cookie-banner__content">
              <p class="govuk-body">
                {% if cookiePolicy.analytics %}
                  You’ve accepted analytics cookies. You can <a class="govuk-link" href="/help/cookies">change your cookie settings</a> at any time.
                {% else %}
                  You’ve rejected analytics cookies. You can <a class="govuk-link" href="/help/cookies">change your cookie settings</a> at any time.
                {% endif %}
              </p>
            </div>
            <div class="govuk-button-group">
              <a class="govuk-button" role="button" href="{{ currentUrl }}">Hide cookie message</a>
            </div>
          </div>
        </div>
      </div>
    {% else %}
      {# Initial cookie banner asking for consent #}
      <div class="govuk-cookie-banner__message govuk-width-container">
        <div class="govuk-grid-row">
          <div class="govuk-grid-column-two-thirds">
            <h2 class="govuk-cookie-banner__heading govuk-heading-m">Cookies on Get permission for marine work</h2>
            <div class="govuk-cookie-banner__content">
              <p class="govuk-body">We use some essential cookies to make this service work.</p>
              <p class="govuk-body">We’d also like to use analytics cookies so we can understand how you use the service and make improvements.</p>
            </div>
          </div>
        </div>
        <form method="post" action="/help/cookies" novalidate>
          <input type="hidden" name="csrfToken" value="{{ csrfToken }}">
          <input type="hidden" name="source" value="banner">
          <div class="govuk-button-group">
            <button type="submit" name="analytics" value="yes" class="govuk-button" data-module="govuk-button">Accept analytics cookies</button>
            <button type="submit" name="analytics" value="no" class="govuk-button" data-module="govuk-button">Reject analytics cookies</button>
            <a class="govuk-link" href="/help/cookies">View cookies</a>
          </div>
        </form>
      </div>
    {% endif %}
  </div>
{% endif %}
