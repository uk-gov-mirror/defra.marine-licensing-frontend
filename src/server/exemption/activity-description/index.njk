{% extends 'layouts/page.njk' %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "cancel-button/macro.njk" import appCancelButton %}
{% block beforeContent %}
<nav>
  {{ govukBackLink({
    text: "Back",
    href: backLink
  }) }}
</nav>
{% endblock %}
{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% if errors %}
        {{ govukErrorSummary({
          titleText: "There is a problem",
          errorList: errorSummary
        }) }}
      {% endif %}
      <form method="POST">
        <input type="hidden" name="csrfToken" value="{{ csrfToken }}"/>
          {{ govukTextarea({
          id: "activityDescription",
          name: "activityDescription",
          value: payload.activityDescription,
          rows: 8,
          label: {
            text: "Activity description",
            classes: "govuk-label--l",
            isPageHeading: true
          },
          hint: {
            text: "Provide details about what you plan to do at this location"
          },
          errorMessage: errors['activityDescription']
        }) }}
        <div class="govuk-button-group">
          {{ govukButton({
              text: "Save and continue",
              classes: "govuk-button--primary"
            }) }}
          {{ appCancelButton({
                cancelLink: '/exemption/task-list'
            }) }}
        </div>
      </form>
    </div>
  </div>
{% endblock %}