{% extends "layouts/page.njk" %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/notification-banner/macro.njk" import govukNotificationBanner %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}

{% block beforeContent %}
  {% if backUrl %}
    {{ govukBackLink({
      href: backUrl,
      text: "Back"
    }) }}
  {% endif %}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% if showSuccessBanner %}
        {% set successHtml %}
          <p class="govuk-notification-banner__heading">
            Your cookie preferences were saved. <a class="govuk-notification-banner__link" href="{{ backUrl or '/' }}">Go back to the previous page</a>.
          </p>
        {% endset %}

        {{ govukNotificationBanner({
          html: successHtml,
          type: "success"
        }) }}
      {% endif %}

      {% if errorSummary %}
        {{ govukErrorSummary({
          titleText: "There is a problem",
          errorList: errorSummary
        }) }}
      {% endif %}

      <h1 class="govuk-heading-xl">{{ pageTitle }}</h1>

      <p class="govuk-body">Cookies are small files saved on your phone, tablet or computer when you visit a website.</p>

      <p class="govuk-body">We use cookies to make this site work and collect information about how you use our service.</p>

      <h2 class="govuk-heading-l">Essential cookies</h2>

      <p class="govuk-body">Essential cookies keep your information secure while you use this service. We do not need to ask permission to use them.</p>

      {{ govukTable({
        head: [
          {
            text: "Name"
          },
          {
            text: "Purpose"
          },
          {
            text: "Expires"
          }
        ],
        rows: [
          [
            {
              text: "session"
            },
            {
              text: "Set to remember information you've entered into a form when using the service"
            },
            {
              text: "4 hours"
            }
          ],
          [
            {
              text: "userSession"
            },
            {
              text: "Set during sign-in and manages authentication state"
            },
            {
              text: "4 hours"
            }
          ],
          [
            {
              text: "csrfToken"
            },
            {
              text: "Ensures you can submit forms"
            },
            {
              text: "When the browser closes"
            }
          ],
          [
            {
              text: "cookies_preferences_set"
            },
            {
              text: "Let's us know that you've saved your cookies consent setting"
            },
            {
              text: "1 year"
            }
          ],
          [
            {
              text: "cookies_policy"
            },
            {
              text: "Saves your cookies consent preferences"
            },
            {
              text: "1 year"
            }
          ]
        ]
      }) }}

      <h2 class="govuk-heading-l">Analytics cookies (optional)</h2>

      <p class="govuk-body">With your permission, we use Google Analytics to collect data about how you use this service. This information helps us to improve our service.</p>

      <p class="govuk-body">Google is not allowed to use or share our analytics data with anyone.</p>

