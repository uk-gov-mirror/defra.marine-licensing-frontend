{% extends "layouts/page.njk" %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/notification-banner/macro.njk" import govukNotificationBanner %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}

{% block beforeContent %}
  {% if backUrl %}
    {{ govukBackLink({
      href: backUrl,
      text: "Back"
    }) }}
  {% endif %}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% if showSuccessBanner %}
        {% set successHtml %}
          <p class="govuk-notification-banner__heading">
            Your cookie preferences were saved. <a class="govuk-notification-banner__link" href="{{ backUrl or '/' }}">Go back to the previous page</a>.
          </p>
        {% endset %}

        {{ govukNotificationBanner({
          html: successHtml,
          type: "success"
        }) }}
      {% endif %}

      {% if errorSummary %}
        {{ govukErrorSummary({
          titleText: "There is a problem",
          errorList: errorSummary
        }) }}
      {% endif %}

      <h1 class="govuk-heading-xl">{{ pageTitle }}</h1>

      <p class="govuk-body">Cookies are small files saved on your phone, tablet or computer when you visit a website.</p>

      <p class="govuk-body">We use cookies to make this site work and collect information about how you use our service.</p>

      <h2 class="govuk-heading-l">Essential cookies</h2>

      <p class="govuk-body">Essential cookies keep your information secure while you use this service. We do not need to ask permission to use them.</p>

      {{ govukTable({
        head: [
          {
            text: "Name"
          },
          {
            text: "Purpose"
          },
          {
            text: "Expires"
          }
        ],
        rows: [
          [
            {
              text: "session"
            },
            {
              text: "Set to remember information you've entered into a form when using the service"
            },
            {
              text: "4 hours"
            }
          ],
          [
            {
              text: "userSession"
            },
            {
              text: "Confirms you’re signed in while you use the service"
            },
            {
              text: "4 hours"
            }
          ],
          [
            {
              text: "csrfToken"
            },
            {
              text: "Helps keep your information secure when you submit forms"
            },
            {
              text: "When the browser closes"
            }
          ],
          [
            {
              text: "cookies_preferences_set"
            },
            {
              text: "Remembers that you’ve set your cookie preferences"
            },
            {
              text: "1 year"
            }
          ],
          [
            {
              text: "cookies_policy"
            },
            {
              text: "Saves your cookie consent preferences"
            },
            {
              text: "1 year"
            }
          ]
        ]
      }) }}

      <h2 class="govuk-heading-l">Analytics cookies (optional)</h2>

      <p class="govuk-body">With your permission, we use analytics cookies to collect data about how you use the Get
         permission for marine work service. This information helps us to improve our service.</p>



      <h3 class="govuk-heading-m">Microsoft Clarity</h3>
      <p class="govuk-body">We use Microsoft Clarity to understand how you use the service. This includes mouse
         movements, clicks, scrolling, and other interactions. Microsoft Clarity uses the following cookies:</p>

      {{ govukTable({
        head: [
          {
            text: "Name"
          },
          {
            text: "Purpose"
          },
          {
            text: "Expires"
          }
        ],
        rows: [
          [
            {
              text: "_clck"
            },
            {
              text: "Stores your Clarity user ID and preferences, so your visits are linked"
            },
            {
              text: "1 year"
            }
          ],
          [
            {
              text: "_clsk"
            },
            {
              text: "Groups page views from a single visit into one session"
            },
            {
              text: "1 day"
            }
          ],
          [
            {
              text: "CLID"
            },
            {
              text: "Identifies when Clarity first saw this user on any site using Clarity"
            },
            {
              text: "1 year"
            }
          ],
          [
            {
              text: "ANNOCHK"
            },
            {
              text: "Checks whether data is shared with another Microsoft advertising cookie (ANID). This is always off because this service does not use ANID"
            },
            {
              text: "10 minutes"
            }
          ],
          [
            {
              text: "MUID"
            },
            {
              text: "Identifies your browser when you visit Microsoft sites. Used for analytics, advertising and to help improve the service"
            },
            {
              text: "25 days"
            }
          ],
          [
            {
              text: "MR"
            },
            {
              text: "Checks whether your MUID should be refreshed"
            },
            {
              text: "7 days"
            }
          ],
          [
            {
              text: "SM"
            },
            {
              text: "Syncs your MUID across Microsoft sites"
            },
            {
              text: "When the browser closes"
            }
          ]
        ]
      }) }}

      <h2 class="govuk-heading-l">Change your cookie settings</h2>

      <form method="post" novalidate>
        <input type="hidden" name="csrfToken" value="{{ csrfToken }}">
        {{ govukRadios({
          name: "analytics",
          fieldset: {
            legend: {
              text: "Do you want to accept analytics cookies?",
              isPageHeading: false,
              classes: "govuk-fieldset__legend--m"
            }
          },
          items: [
            {
              value: "yes",
              text: "Yes",
              checked: payload.analytics === "yes"
            },
            {
              value: "no",
              text: "No",
              checked: payload.analytics === "no"
            }
          ],
          errorMessage: errors.analytics and {
            text: errors.analytics.text
          }
        }) }}

        {{ govukButton({
          text: "Save cookie settings",
          type: "submit"
        }) }}
      </form>
    </div>
  </div>
{% endblock %}
