      <h3 class="govuk-heading-m">Microsoft Clarity cookies</h3>

      {{ govukTable({
        head: [
          {
            text: "Name"
          },
          {
            text: "Purpose"
          },
          {
            text: "Expires"
          }
        ],
        rows: [
          [
            {
              text: "_clck"
            },
            {
              text: "Persists the Clarity User ID and preferences, unique to that site is attributed to the same user ID"
            },
            {
              text: "1 year"
            }
          ],
          [
            {
              text: "_clsk"
            },
            {
              text: "Connects multiple page views by a user into a single Clarity session recording"
            },
            {
              text: "1 day"
            }
          ],
          [
            {
              text: "CLID"
            },
            {
              text: "Identifies the first-time Clarity saw this user on any site using Clarity"
            },
            {
              text: "1 year"
            }
          ],
          [
            {
              text: "ANNOCHK"
            },
            {
              text: "Indicates whether MUID is transferred to ANID, a cookie used for advertising. Clarity doesn't use ANID and so this is always set to 0"
            },
            {
              text: "10 minutes"
            }
          ],
          [
            {
              text: "MR"
            },
            {
              text: "Indicates whether to refresh MUID"
            },
            {
              text: "7 days"
            }
          ],
          [
            {
              text: "MUID"
            },
            {
              text: "Identifies unique web browsers visiting Microsoft sites. These cookies are used for advertising, site analytics, and other operational purposes"
            },
            {
              text: "25 days"
            }
          ],
          [
            {
              text: "SM"
            },
            {
              text: "Used in synchronizing the MUID across Microsoft domains"
            },
            {
              text: "When the browser closes"
            }
          ]
        ]
      }) }}

      <h2 class="govuk-heading-l">Change your cookie settings</h2>

      <form method="post" novalidate>
        {{ govukRadios({
          name: "analytics",
          fieldset: {
            legend: {
              text: "Do you want to accept analytics cookies?",
              isPageHeading: false,
              classes: "govuk-fieldset__legend--m"
            }
          },
          items: [
            {
              value: "yes",
              text: "Yes",
              checked: payload.analytics === "yes"
            },
            {
              value: "no",
              text: "No",
              checked: payload.analytics === "no"
            }
          ],
          errorMessage: errors.analytics and {
            text: errors.analytics.text
          }
        }) }}

        {{ govukButton({
          text: "Save cookie settings",
          type: "submit",
          attributes: {
            "data-module": "govuk-button"
          }
        }) }}
      </form>
    </div>
  </div>
{% endblock %}
